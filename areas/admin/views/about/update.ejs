<%- include("../partials/_nav")  %>

    <!-- Main Content -->
    <div class="container mt-4">
        <h1>Güncəlləmə</h1>

        <div class="card mt-4">
           
            <div class="card-body">
                <form action="<%=about._id%>" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name" class="form-label">Baslıq Azərbaycan dilində</label>
                        <textarea type="text" class="form-control" id="nameAz"  name="titleAz"><%=about.titleAz  %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Baslıq Alman dilində</label>
                        <textarea type="text" class="form-control" id="nameGe"  name="titleGe"><%=about.titleGe  %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Acıqlama Azərbaycan dilində</label>
                        <textarea type="description" class="form-control"  id="descAz" name="descriptionAz"><%=about.descriptionAz%></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Acıqlama Alman dilində</label>
                        <textarea type="description" class="form-control" id="descGe"  name="descriptionGe"><%=about.descriptionGe%></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="photo" class="form-label">şəkil seçin</label>
                        <input class="form-control" type="file" id="photo" name="image" >
                    </div>
                   
                    <button type="submit" class="btn btn-primary">Güncəllə</button>
                </form>
            </div>
        </div>
    </div>






    <%- include("../partials/_footer")  %>

    <script src="/ckeditor/ckeditor.js"></script>
    <script>

CKEDITOR.replace('nameAz',{
        entities: false,
      });
      CKEDITOR.replace('nameGe',{
      
        removePlugins: 'trackchanges',
        entities: false,
      });
      CKEDITOR.replace('descAz',{
      
      removePlugins: 'trackchanges',
      entities: false,
    });
    CKEDITOR.replace('descGe',{
      
      removePlugins: 'trackchanges',
      entities: false,
    });
    </script>
  