<%- include("../partials/_nav")  %>

    <!-- Main Content -->
    <div class="container mt-4">
        <h1>Qaydanı güncəlləmək</h1>

        <div class="card mt-4">
          
            <div class="card-body">
                <form action="<%=terms._id%>" method="post" >
                    <div class="mb-3">
                        <label for="name" class="form-label">Ad Azərbaycan dilində</label>
                        <input type="text" class="form-control" id="nameAz" value="<%= terms.termsNameAz %>" name="termsNameAz">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Ad Alman dilində</label>
                        <input type="text" class="form-control" id="nameGe" value="<%= terms.termsNameGe %>" name="termsNameGe">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">İçərik Azərbaycan dilində</label>
                        <textarea type="description" class="form-control" id="descAz" name="termsDescAz"><%= terms.termsDescAz %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">içərik Alman dilində</label>
                        <textarea type="description" class="form-control" id="descGe"  name="termsDescGe"><%= terms.termsDescGe %></textarea>
                    </div>

                 
                    <button type="submit" class="btn btn-primary">Güncəllə</button>
                </form>
            </div>
        </div>
    </div>

    <%- include("../partials/_footer")  %>
    <script src="/ckeditor/ckeditor.js"></script>
    <script>


      CKEDITOR.replace('descAz',{
      
      removePlugins: 'trackchanges',
      entities: false,
    });
    CKEDITOR.replace('descGe',{
      
      removePlugins: 'trackchanges',
      entities: false,
    });
    </script>